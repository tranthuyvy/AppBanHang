<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="8sp"
    app:cardCornerRadius="4sp"
    android:layout_margin="5sp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/item_giohang_image"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_new"
            android:layout_width="100sp"
            android:layout_height="100sp"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/item_giohang_tensp"
                android:layout_marginLeft="10sp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Tên Sản Phẩm"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:weightSum="18"
                android:layout_marginTop="10sp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="7"
                    android:id="@+id/item_giohang_gia"
                    android:layout_marginLeft="10sp"
                    android:text="500.000"
                    android:textColor="@color/design_default_color_error"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:src="@drawable/ic_remove_24"
                    android:id="@+id/item_giohang_tru"
                    android:layout_weight="1"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    app:tint="@color/design_default_color_error" />
                <TextView
                    android:id="@+id/item_giohang_soluong"
                    android:text="1"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:src="@drawable/ic_add_24"
                    android:id="@+id/item_giohang_cong"
                    app:tint="@color/design_default_color_error"
                    android:layout_weight="1"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:src="@drawable/ic_drag_handle_24"
                    android:layout_weight="1"
                    app:tint="@color/design_default_color_error"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/item_giohang_giasp2"
                    android:text="500.000Đ"
                    android:gravity="center|center_vertical"
                    android:layout_weight="7"
                    android:textColor="@color/design_default_color_error"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <CheckBox
                android:padding="5sp"
                android:layout_marginLeft="10sp"
                android:id="@+id/item_giohang_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>